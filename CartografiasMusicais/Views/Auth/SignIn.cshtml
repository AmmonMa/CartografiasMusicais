@model CartografiasMusicais.CrossCutting.ValidationModels.User.SignUserValidationModel

@{
    ViewData["Title"] = "Entrar";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="container w-420 p-15 bg-white mt-40 text-center">


    <h2 class="text-light text-greensea">Administração</h2>

    <form name="form" asp-action="SignIn" class="form-validation mt-20" novalidate="">
        <!-- <div asp-validation-summary="ModelOnly" class="text-danger"></div> -->

        <div class="form-group">
            <input asp-for="Email" class="form-control underline-input" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Password" class="form-control underline-input" placeholder="Senha" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="bg-slategray lt wrap-reset mt-40">
            <p class="m-0">
                <input type="submit" value="Entrar no Sistema" class="text-uppercase login-button" />
            </p>
        </div>

    </form>
</div>


