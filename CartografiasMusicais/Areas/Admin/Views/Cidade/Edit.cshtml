@model CartografiasMusicais.CrossCutting.ValidationModels.Cidade.MudaCidadeDTO

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <div class="page page-forms-common">
        <div class="pageheader">
            <h2>Cidades <span>Cadastro de cidades</span></h2>
            <div class="page-bar">
                <ul class="page-breadcrumb">
                    <li>
                        <span><i class="fa fa-home"></i> Administração</span>
                    </li>
                    <li>
                        <span>Cidades</span>
                    </li>
                    <li>
                        <span>Editar Cidade</span>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <!-- tile -->
                <section class="tile">
                    <!-- tile header -->
                    <div class="tile-header dvd dvd-btm">
                        <h1 class="custom-font"><strong>Editar </strong>Cidade</h1>
                    </div>
                    <!-- /tile header -->
                    <!-- tile body -->
                    <div class="tile-body">
                        <form enctype="multipart/form-data" asp-action="Edit" class="form-horizontal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Nome" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Nome" class="form-control" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Descricao" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <textarea asp-for="Descricao" class="form-control"></textarea>
                                    <span asp-validation-for="Descricao" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Imagem" class="col-sm-2 control-label"></label>
                                <div class="col-sm-7">
                                    <input asp-for="Imagem" type="file" accept="image/*" class="filestyle" data-buttonText="Inserir Arquivo" data-iconName="fa fa-inbox" />
                                    <span asp-validation-for="Imagem" class="text-danger"></span>
                                </div>
                                @if (!string.IsNullOrEmpty(Model.CaminhoImagem))
                                {
                                    <div class="col-sm-2">
                                        <a href="@String.Format("https://{0}/imagens/{1}", Context.Request.Host, Model.CaminhoImagem)" target="_blank" class="btn btn-default btn-ef btn-ef-7 btn-ef-7a mb-10"><i class="fa fa-file-archive-o"></i>Visualizar Foto</a>
                                    </div>
                                }
                            </div>
                            <div class="form-footer">
                                <input type="submit" value="Salvar" class="btn btn-success btn-ef btn-ef-4 btn-ef-4c pull-right" />
                                <button asp-action="Index" class="btn btn-lightred btn-ef btn-ef-4 btn-ef-4c"><i class="fa fa-arrow-left"></i>Cancelar</button>
                            </div>
                        </form>
                    </div>
                    <!-- /tile body -->
                </section>
                <!-- /tile -->
            </div>
        </div>
    </div>